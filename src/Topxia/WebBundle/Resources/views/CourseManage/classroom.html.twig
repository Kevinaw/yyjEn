{% extends 'TopxiaWebBundle:CourseManage:layout.html.twig' %}

{% block title %}教室设置 - {{ parent() }}{% endblock %}

{% set side_nav = 'classroom' %}
{% set script_controller = 'course-manage/classroom' %}
{% block main %}

<div class="panel panel-default panel-col">
	<div class="panel-heading">教室设置
	</div>
	<div class="panel-body">
		{{ web_macro.flash_messages() }}
		
		<form class="form-horizontal" id="classroom-form" method="post" >

			<div class="form-group">
			  <div class="col-md-2 control-label">{{ form_label(form.classroomId, '教室') }}</div>
			  <div class="col-md-8 controls"> 
			  		{{ form_widget(form.classroomId, {attr:{class:'form-control width-input width-input-large'}}) }}
			  </div>
			</div>
			
			<div class="form-group">
				<div class="col-md-offset-2 col-md-8 controls">
				{{ form_rest(form) }}
					<button class="btn btn-fat btn-primary" id="classroom-save-btn" type="submit">保存</button>
				</div>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

		</form>
	</div>
</div>

{% endblock %}