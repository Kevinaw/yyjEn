{% extends 'TopxiaWebBundle:CourseManage:layout.html.twig' %}
{% import 'TopxiaWebBundle::macro.html.twig' as macro %}

{% block title %}添加题目 - {{ parent() }}{% endblock %}

{% set parentId = parentId |default(null)%}
{% set isEdit = isEdit |default(null)%}
{% set side_nav = 'base' %}
{#% set script_controller = 'quiz-question/create' %#}

{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading clearfix">
    创建试卷
  </div>
  <div class="panel-body">

    <div id="question-creator-widget">
      <form id="question-create-form" class="form-horizontal quiz-question" method="post" action="
      {% if isEdit %}
        {{ path('course_manage_quiz_question_generate_update',{courseId:1  }) }}
      {% else %}
        {{ path('course_manage_quiz_question_generate_create',{courseId:1  }) }}
      {% endif %}
      ">
        {{ web_macro.flash_messages() }}

        <div class="form-group">
          <div class="col-md-2 control-label"><label for="question-stem-field">试卷名称</label></div>
          <div class="col-md-8 controls">
              <input class="form-control" name="" value=""  id=" " {% if isEdit %}{#{question.stem | default(null)}#}{% endif %} />
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2 control-label"><label for="question-stem-field">试卷说明</label></div>
          <div class="col-md-8 controls">
            {% if isEdit %}
              <textarea class="form-control" id="question-stem-field" name="stem">{{question.stem | default(null)}}</textarea>
            {% else %}
              <textarea class="form-control" id="question-stem-field" name="stem"></textarea>
            {% endif %}
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2 control-label"><label for="question-stem-field">时间限制</label></div>
          <div class="col-md-2 controls">
              <input class="form-control" name="" value=""  id=" " {% if isEdit %}{#{question.stem | default(null)}#}{% endif %} />
          </div>
          <div class="col-md-4 controls pls">
            <p class="form-control-static pull-left ">分钟 (0表示不限)</p>
          </div>
        </div>

        <br />

        <div class="form-group">
          <div class="col-md-2 control-label"><label for="question-stem-field"></label></div>
          <div class="form-inline">
            <div class="col-md-8 controls plm">

              <div class="form-control-static pull-left prm">
                   选择题 
              </div>

              <div class="form-control-static pull-left pll">题目数量</div>
              <div class="col-md-2 ">
                <input type="text" class="form-control input-sm" placeholder="">
              </div>

              <div class="form-control-static pull-left pll">
                   题目分值 
              </div>
              <div class="col-md-2 ">
                <input type="text" class="form-control input-sm" placeholder="">
              </div>

            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2 control-label"><label for="question-stem-field"></label></div>
          <div class="form-inline">
            <div class="col-md-8 controls plm">

              <div class="form-control-static pull-left prm">
                   选择题 
              </div>

              <div class="form-control-static pull-left pll">题目数量</div>
              <div class="col-md-2 ">
                <input type="text" class="form-control input-sm" placeholder="">
              </div>

              <div class="form-control-static pull-left pll">
                   题目分值 
              </div>
              <div class="col-md-2 ">
                <input type="text" class="form-control input-sm" placeholder="">
              </div>

            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2 control-label"><label for="question-stem-field"></label></div>
          <div class="form-inline">
            <div class="col-md-8 controls plm">

              <div class="form-control-static pull-left prm">
                   选择题 
              </div>

              <div class="form-control-static pull-left pll">题目数量</div>
              <div class="col-md-2 ">
                <input type="text" class="form-control input-sm" placeholder="">
              </div>

              <div class="form-control-static pull-left pll">
                   题目分值 
              </div>
              <div class="col-md-2 ">
                <input type="text" class="form-control input-sm" placeholder="">
              </div>

            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2 control-label"><label for="question-stem-field"></label></div>
          <div class="form-inline">
            <div class="col-md-8 controls plm">

              <div class="form-control-static pull-left prm">
                   选择题 
              </div>

              <div class="form-control-static pull-left pll">题目数量</div>
              <div class="col-md-2 ">
                <input type="text" class="form-control input-sm" placeholder="">
              </div>

              <div class="form-control-static pull-left pll">
                   题目分值 
              </div>
              <div class="col-md-2 ">
                <input type="text" class="form-control input-sm" placeholder="">
              </div>

            </div>
          </div>
        </div>

        <br />
        
        <div class="form-group">
          <div class="col-md-8 col-md-offset-2 controls">
            <a href="{{ path('course_manage_quiz_question',{courseId:1}) }}" class="btn btn-link">返回</a>
            <button type="submit" class="btn btn-primary" >保存</button>
          </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

      </form>


    </div>
    
  </div>
</div>



{% endblock %}



 